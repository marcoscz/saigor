@using MudBlazor

<MudSelect T="string" Label="@Label" @bind-Value="Value" Disabled="@Disabled" Required="@Required" Variant="@Variant" Margin="@Margin">
    @if (!string.IsNullOrEmpty(Placeholder))
    {
        <MudSelectItem Value="@((string?)null)">@Placeholder</MudSelectItem>
    }
    @foreach (var option in Options)
    {
        <MudSelectItem Value="@option.Value">@option.Text</MudSelectItem>
    }
</MudSelect>

@code {
    [Parameter] public string Label { get; set; } = string.Empty;
    [Parameter] public string Value { get; set; } = string.Empty;
    [Parameter] public EventCallback<string> ValueChanged { get; set; }
    [Parameter] public List<SelectOption> Options { get; set; } = new();
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool Required { get; set; }
    [Parameter] public Variant Variant { get; set; } = Variant.Outlined;
    [Parameter] public Margin Margin { get; set; } = Margin.None;
    [Parameter] public string? Placeholder { get; set; }
} 